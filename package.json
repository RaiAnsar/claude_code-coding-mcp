{
  "name": "claude-code-coding-mcp",
  "version": "0.1.0",
  "description": "Enhanced MCP server for Claude Code with persistent context and advanced development tools",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write 'src/**/*.{js,json,md}'",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RaiAnsar/claude_code-coding-mcp.git"
  },
  "keywords": [
    "mcp",
    "claude",
    "debugging",
    "development",
    "tools",
    "ai",
    "context"
  ],
  "author": "Rai Ansar",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "redis": "^4.6.5",
    "pg": "^8.10.0",
    "jsonrpc-lite": "^2.2.0",
    "winston": "^3.8.2",
    "dotenv": "^16.0.3",
    "joi": "^17.9.1",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "uuid": "^9.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^2.4.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.38.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.7",
    "@types/node": "^18.15.11"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}